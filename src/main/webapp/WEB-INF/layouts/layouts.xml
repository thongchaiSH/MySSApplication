<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
        "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
        "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>
    <definition name="default" template="/WEB-INF/layouts/default.jspx">
        <put-attribute name="header" value="/WEB-INF/views/header.jsp"/>
        <put-attribute name="menu" value="/WEB-INF/views/menu.jsp"/>
        <put-attribute name="footer" value="/WEB-INF/views/footer.jsp"/>
    </definition>

    <definition name="defaultErrorPage" template="/WEB-INF/layouts/defaultErrorPage.jspx">
        <put-attribute name="body" value="/WEB-INF/views/errorPage/default.jspx"/>
    </definition>

    <definition name="defaultLogin" template="/WEB-INF/layouts/defaultLogin.jspx">
        <put-attribute name="footer" value="/WEB-INF/views/footer.jsp" />
    </definition>
</tiles-definitions>
